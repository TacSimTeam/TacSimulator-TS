{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "DOM", "DOM.Iterable", "ESNext"
    ],
    "rootDirs": ["src", "test"],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/renderer/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
