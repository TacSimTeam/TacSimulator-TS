{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM", "DOM.Iterable", "ESNext"
    ],
    "rootDirs": ["src", "test"],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/renderer/**/*"
  ]
}
